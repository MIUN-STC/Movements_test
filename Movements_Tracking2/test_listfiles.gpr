			"-Wno-unused-function",
			"-Wno-error=unused-function",
			--"-Wno-missing-field-initializers",
			--"-Wno-missing-braces", 
			--"-Wno-error=unused-but-set-variable",
			--"-Wno-error=unused-parameter",
			--"-Wno-error=unused-variable",
			--"-Wno-variadic-macros",
			--"-std=gnu11", 
			--"-fdiagnostics-color", 
			"-Wall", 
			--"-Wextra", 
			--"-Wpedantic", 
			--"-Wshadow", 
			--"-Werror", 
			--"-Wshadow", 
			--"-march=native",
			""
		);
	end Compiler;

	package Linker is
	end Linker;


end Test_ListFiles;
