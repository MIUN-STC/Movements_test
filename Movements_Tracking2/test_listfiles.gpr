project Test_ListFiles is

	for Languages use ("C");
	for Object_Dir use "obj";
	for Exec_Dir use "bin";
	for Source_Dirs use 
	(
		"../csc",
		"src/test_listfiles"
	);
	
	Main_Files :=
	(
		"test_listfiles.c",
		"test_manager.c"
	);
	
	for Main use Main_Files;
	
	for Source_Files use Main_Files &
	();
	
	package Builder is
		--for Executable ("test_camera.c") use "test_camera.exe";
	end Builder;

	package Compiler is
		for Switches ("C") use 
